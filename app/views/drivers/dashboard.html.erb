    <%# SHOW MAP %>
    <div class="row mt-5">
        <div class=" col-lg-8">
            <div id="map"></div>
        </div>
        

        <div class=" col-lg-4 mt-xs-5 bg-light">
            <%if @trip %>

                <div class="card">
                    <h5 class="card-header">Trip Request</h5>
                    <div class="card-body">
                        <h5 class="card-title"><%= @trip.passenger.user.name %></h5>
                        <p class="card-text">From: <small><%= @trip.from %></small></p>
                        <p class="card-text">To: <small><%= @trip.to %></small></p>

                        <div class="d-flex justify-content-around">
                            <form action="/driver/dashboard/notification/<%=@trip.id%>/dismiss" method="POST">
                                <input class="btn btn-warning" type="submit" value="Dismiss">
                            </form>
                            <form action="/driver/dashboard/notification/<%=@trip.id%>/accept" method="POST">
                                <input class="btn btn-success" type="submit" value="Accept">
                            </form>
                        </div>

                    </div>
                </div>


            <%else%>
                <h4 class="text-muted">No Requested Trips </h4>
            <%end%>
        </div>

    </div>



</div>





