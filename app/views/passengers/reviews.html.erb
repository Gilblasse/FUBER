<style>
    .tab-wrapper{
        height:70px;
        display: flex;
        justify-content: center;
    }

    .tabs-orange{
        width: 375px;
    }

    div ul li.nav-item:hover > .waves-light {
        border-bottom: solid #007bff 3px;
        color: grey;
    }
    .waves-light{
        color:#c2c8cc;
    }

    a.active{
        border-bottom: solid #007bff 3px;
        color:#495057;
    }

    div.active{
        border-bottom: none
    }

</style>

<div class="container">
<%# NAVIGATION BAR %>
    <nav class="navbar navbar-expand-md navbar-dark bg-for-nav">
            <div class="d-flex w-50 order-0">
                <a class="navbar-brand mr-1" href="#">Welcome, <%= @passenger.user.name %></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/passenger/book-trip/new">Book Trip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/passenger/trips">Trips</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/passenger/reviews">Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
            <i class="material-icons profile-img">account_circle</i>
    </nav>


    <h1 class="text-center text-muted mt-5">Reviews</h1>
        <hr class="w-50 mx-auto">
        
    <div class="mt-4">
        <%= "<h5> No Reviews </h5>" if @passenger.driver_reviews.empty?%>
        <% @passenger.driver_reviews.reverse.each do |review| %>
            <div class="row mb-3">
                <div class="col-6 offset-3">

                    <div class="card">

                        <div class="card-header">
                            <%review.stars.times do %>
                                <i class="material-icons star-icon">star</i>
                            <%end%>
                        </div>
                        
                        <div class="card-body"> 
                            <p class="card-text"><%= review.comment %></p>
                            <footer class="blockquote-footer">Annoymous driver<cite title="Source Title"> @ <%=review.created_at.strftime("%A %d, %Y")%></cite></footer>
                        </div>

                    </div>

                </div>
            </div>
            
        <% end %>

    </div>

</div>