    <section>
        <div class="row mt-5">
            <div class=" col-lg-6 offset-lg-3">
                <form action="/passenger/trip/<%=@trip.id%>" method="post">
                    <input id="hidden" type="hidden" name="_method" value="patch">
                    
                    <div class="form-group">
                        <label for="search-term">Origin: </label>
                        <input type="text" class="form-control"  id="search-term" placeholder="Where from ?" value="<%=@trip.from%>" name="address[from]">
                    </div>

                    <div class="form-group">
                        <label for="where-to">Destination: </label>
                        <input type="text" class="form-control"  id="where-to" placeholder="Where To ?" value="<%=@trip.to%>" name="address[to]">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="drivers">Driver</label>
                        </div>

                        <select class="custom-select"  id="drivers" name="driver_id">
                            
                            <% if @trip.driver.nil? %>
                            
                                <%if @drivers.nil? %>
                                    <option selected> No Drivers In Your Area ...</option>
                                <% else %>
                                    <option selected value="nil"> Choose A Driver ... </option>
                                <%end %>

                            <% else %>
                               
                                <option selected value="<%=@trip.driver.id%>"><%=@trip.driver.user.name%></option>
                                <% @drivers = @drivers.reject {|driver| driver.id == @trip.driver.id } if !@drivers.nil? %>
                            <% end %>
                            

                           <%if !@drivers.nil? && @trip.status == "pending" %>
                                <%@drivers.each do |driver| %> 
                                    <option class="d-flex justify-content-center" value="<%=driver.id %>">
                                        
                                            
                                                <%=driver.user.name%>

                                                <%num = 40 - (driver.user.name.size + (driver.leg[:time].size / 4.675))%>
                                                <%num.ceil().times do%>
                                                    &nbsp;
                                                <%end%>
                                                
                                                <%#driver.leg[:time]%>
                                                <%=driver.id %>
                                           
                                            
                                        
                                    </option>
                                <%end%>
                            <%end%>

                        </select>
                    
                    </div>

                    <input type="submit" class="btn btn-outline-primary align-self-center" value="Update Trip">
                    
                </form>
            </div>
        </div>

    </section>




    <script>
        // AUTOCOMPLETE FOR ADDRESS INPUT
        function activatePlacesSearch() {
            var whereFrom = document.getElementById('search-term');
            var whereToInput = document.getElementById('where-to');
            var autocomplete = new google.maps.places.Autocomplete(whereFrom);
            var auto = new google.maps.places.Autocomplete(whereToInput);
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%=API_KEY%>&libraries=places&callback=activatePlacesSearch"></script>

</div>

