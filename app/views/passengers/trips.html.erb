<style>
    .bg-for-nav {
        background-color: #39374d !important;
    }
    .profile-img {
        font-size: 45px !important;
        color: #fff;
    }

</style>

<div class="container">
    
    <nav class="navbar navbar-expand-md navbar-dark bg-for-nav">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">Welcome, <%= @passenger.user.name %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/passenger/book-trip/new">Book Trip</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/passenger/trips">Trips</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Reviews</a>
                </li>
            </ul>
        </div>
        <i class="material-icons profile-img">account_circle</i>
    </nav>

    


    <section>
        <% @passenger.trips.each do |trip| %>
            <%= trip.from %>
            <%= trip.to %>
            <%= trip.status %>
            
            <%= !trip.driver.nil? ? trip.driver.user.name.capitalize : "No Driver" %>
            <br>
            <br>
        <% end %>
    </section>




</div>

